%ol.breadcrumb
  %li
    %a{:href => "/"} Главная
  %li Восстановление пароля

%section.log-reg.container
  %h2 Восстановление пароля

  .col-lg-5.col-md-5.col-sm-5

    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = f.error_notification
      = f.input :email, required: false, autofocus: true
      = f.button :submit, "Востановить пароль", class: 'btn btn-success'

    -# render "devise/shared/links"

    %br
    = link_to new_user_session_path, class: 'login-btn' do
      %i.icon-profile
      %span Войти
