.container.main-container
  .row
    .col-lg-3.col-md-3.col-sm-12
      = render 'categories'
    .clearfix.visible-sm
    / Catalogue
    .col-lg-9.col-md-9.col-sm-12
      .col-lg-12.col-sm-12
        %span.title= @deal.title
        = image_tag @deal.image_url, class: 'img-responsive img-bordered'
        %br
        %blockquote= raw @deal.description
        %span.title Товары спецпредложения
        = render @deal.products