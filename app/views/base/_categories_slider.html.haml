        .ms-layer.text-block{"data-delay" => "250", "data-duration" => "800", "data-ease" => "easeOutQuad", "data-effect" => "left(50,true)"}
          %h2.dark-color
            = banner.title
            .redalert= banner.title_red
          %p.dark-color= banner.description
          %a.btn.btn-primary{:href => banner.main_button_url}= banner.main_button_title
          - if banner.secondary_button_on
            %a.btn.btn-success{:href => banner.secondary_button_url}= banner.secondary_button_title
        = image_tag banner.image_big_url(:home_page_banner_image_big), class: 'ms-layer img-block', data: {delay: '350', duration: '800', ease: 'easeOutQuad', effect: 'back(500)'}, style: 'right: 50px;'
        .ms-thumb
          = image_tag banner.image_small.url
          %h3= banner.title_small



