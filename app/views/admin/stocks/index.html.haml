.page-header
  %h2
    Поставщики
    = link_to 'Добавить', new_stock_path, class: 'btn btn-success btn-sm'

%table.table.table-stripped.table-bordered

  %thead
    %tr
      %th Название
      %th Телефон
      %th Адрес
      %th
      %th

  %tbody
    - @stocks.each do |stock|
      %tr
        %td= stock.title
        %td= stock.phone
        %td= stock.address
        %td= link_to 'Изменить', edit_stock_path(stock), class: 'btn btn-default'
        %td= link_to 'Удалить', stock, :method => :delete, :data => { :confirm => 'Вы уверены?' }, class: 'btn btn-danger'

