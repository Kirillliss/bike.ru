= simple_form_for([:admin, @category], html: {class: 'form-vertical' }) do |f|
  .row
    .col-md-7= f.input :title
    .col-md-5= f.association :projects, input_html: { class: 'select2'} if @category.root?

  = f.input :topper
  = f.input :seo_title
  = f.input :seo_keywords
  = f.input :seo_description
  = f.association :discount, input_html: { class: 'select2'}

  .row
    .col-md-4
    .col-md-3= f.input :published
    .col-md-5
      = f.button :submit, 'Сохранить', class: 'btn btn-primary'
      - back_url = @category.new_record? ? admin_categories_path : [:admin, @category]
      = link_to 'Отменить', back_url, class: 'btn btn-danger btn-small'